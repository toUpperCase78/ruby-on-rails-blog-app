<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Delete", article_path(@article),
                  method: :delete,
				  data: { confirm: "Do you want to delete this article?" } %></li>
  <li><%= link_to "Go Back", root_path %>
</ul>

<h2>Comments</h2>
<%= render @article.comments %>

<h3>Add a comment here:</h3>
<%= render 'comments/form' %>